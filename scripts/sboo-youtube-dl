#!/bin/bash
set -eu

##################################################
# Dependencies ###################################
##################################################

command -v youtube-dl

##################################################
# Arguments ######################################
##################################################

REPOSITORY="${1:?\<\<\< $0 REPOSITRY \>\>\>}"

##################################################
# Variables ######################################
##################################################

URL="git@github.com:sboosali/${REPOSITORY}.git"

# set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

##################################################
# Actions ########################################
##################################################

# echo 
# echo ----------------------------------------
# echo 
# echo ""
# echo 
# echo ----------------------------------------
# echo 

time youtube-dl "${URL}" --ignore-errors # --playlist-start 0

# echo 
# echo ----------------------------------------
# echo 
# echo ""
# echo 
# echo ----------------------------------------
# echo 

##################################################
# Notes ##########################################
##################################################

##################################################