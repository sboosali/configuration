% \https :: String -> String 
%
% Make a clickable link from a URL, hiding the protocol from the rendered.

\newcommand*{\https}[1]{%
  \href{https://#1} {\underline{#1}}%
}%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% \mailto :: String -> String 
%

\newcommand*{\mailto}[1]{%
  \href{mailto:#1} {\underline{#1}}%
}%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% \tel :: String -> String -> String -> String
%
% \tel{country-code}{area-code}{digits}
%
% \tel{w}{xxx}{yyy-zzzz}

\newcommand*{\tel}[3]{%
  \href{tel:+#1#2#3} {\underline{+#1 (#2) #3}}%
}%

